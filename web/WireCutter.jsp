    <body>
        <div class="row">
            <div class="col-md-4">
                <img src = "Products/WireCutter.jpg">
                <div class="row">
                    <div class = "col-md-6">
                        <form action="CartAdd" method="post">
                            <input type="hidden" name="productName" value="Wire Cutter">
